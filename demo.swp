Option Explicit

Dim swApp As Object
Dim Part As Object
Dim boolstatus As Boolean

Sub main()

    Set swApp = Application.SldWorks
    
    ' --- Kapı Kasası ---
    Set Part = swApp.NewDocument("C:\ProgramData\SolidWorks\SOLIDWORKS 2022\templates\Part.prtdot", 0, 0, 0)
    Part.SketchManager.InsertSketch True
    Part.SketchManager.CreateCenterRectangle 0, 0, 0, 0.45, 1.05, 0   ' 90x210 cm kasa içi
    Part.FeatureManager.FeatureExtrusion2 True, False, False, 0, 0, 0.08, 0, False, False, False, False, _
    0, 0, False, False, False, False, True, True, True, 0, 0, False
    
    swApp.SendMsgToUser "Kasa oluşturuldu"

    ' --- Kapı Kanadı ---
    Part.SketchManager.InsertSketch True
    Part.SketchManager.CreateCenterRectangle 0, 0, 0, 0.43, 1.03, 0
    Part.FeatureManager.FeatureExtrusion2 True, False, False, 0, 0, 0.07, 0, False, False, False, False, _
    0, 0, False, False, False, False, True, True, True, 0, 0, False
    
    swApp.SendMsgToUser "Kapı kanadı oluşturuldu"
    
    ' --- Kilit Yuvası ---
    Part.SketchManager.InsertSketch True
    Part.SketchManager.CreateCenterRectangle 0.38, 0, 0, 0.40, 0.05, 0
    Part.FeatureManager.FeatureCut3 True, False, False, 0, 0, 0.02, 0, False, False, False, False, _
    0, 0, False, False, False, False, True, True, True, True, False, 0, 0, False
    
    swApp.SendMsgToUser "Kilit yuvası açıldı"
    
    ' --- Menteşe Yerleri ---
    Part.SketchManager.InsertSketch True
    Part.SketchManager.CreateCircle 0, 1, 0, 0.02, 1, 0
    Part.FeatureManager.FeatureCut3 True, False, False, 0, 0, 0.02, 0, False, False, False, False, _
    0, 0, False, False, False, False, True, True, True, True, False, 0, 0, False
    
    Part.SketchManager.CreateCircle 0, -1, 0, 0.02, -1, 0
    Part.FeatureManager.FeatureCut3 True, False, False, 0, 0, 0.02, 0, False, False, False, False, _
    0, 0, False, False, False, False, True, True, True, True, False, 0, 0, False
    
    swApp.SendMsgToUser "Menteşe yerleri açıldı"
    
    swApp.SendMsgToUser "Tam fonksiyonlu kapı modeli hazır!"
    
End Sub
